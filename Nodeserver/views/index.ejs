	<script type="text/javascript">
		  var curIndex = 0, imgLen = $(".imgList li").length;
		  var autoChange = setInterval(function(){ 
			    if(curIndex < imgLen-1){ 
			      curIndex ++; 
			    }else{ 
			      curIndex = 0;
			    }
			    changeTo(curIndex); 
		    },2500);
		  $("#prev").hover(function(){ 
		    clearInterval(autoChange);
		  },function(){ 
		    autoChangeAgain();
		  });
		  $("#prev").click(function(){ 
		    curIndex = (curIndex > 0) ? (--curIndex) : (imgLen - 1);
		    changeTo(curIndex);
		  });
		  $("#next").hover(function(){ 
		    clearInterval(autoChange);
		  },function(){ 
		    autoChangeAgain();
		  });
		  $("#next").click(function(){ 
		    curIndex = (curIndex < imgLen - 1) ? (++curIndex) : 0;
		    changeTo(curIndex);
		  });
		  function autoChangeAgain(){ 
		      autoChange = setInterval(function(){ 
		      if(curIndex < imgLen-1){ 
		        curIndex ++;
		      }else{ 
		        curIndex = 0;
		      }
		      changeTo(curIndex); 
		      },2500);
		    }
		  function changeTo(num){ 
		    var goLeft = num * 1140;
		    $(".imgList").animate({left: "-" + goLeft + "px"},500);
		  }
    </script>
